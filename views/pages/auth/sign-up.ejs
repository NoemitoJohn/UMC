<%- include('../../partials/header') %>
<% 
 const errors = locals.errors 
%>
<div class="p-5 bg-base-300 h-screen flex justify-center items-center">
  <div class="w-full md:w-[400px] rounded-md p-5 bg-base-100 ">
    <span class="text-lg font-medium uppercase">Register</span>
    <img src="/public/img/logo.svg" class="w-full h-20 mt-1" alt="">
    <form class="mt-3 grid gap-2" id="register_form" action="/auth/register" method="post">
      <label class="input input-bordered input-sm p-0 flex items-center gap-2">
        <span >First Name</span>
        <input type="text" name="first_name" class="grow" placeholder="First Name" required autocomplete="off"/>
      </label> 
      <label class="input input-bordered input-sm p-0 flex items-center gap-2" >
        <span >Last Name</span>
        <input type="text" class="grow" name="last_name" placeholder="Last Name" required autocomplete="off"/>
      </label>
      <label class="input input-bordered input-sm p-0 flex items-center gap-2">
        <span >Email</span>
        <input type="text" class="grow" name="email" placeholder="Email" required/>
      </label>
      <label class="input input-bordered input-sm p-0 flex items-center gap-2">
        <span >Password</span>
        <input type="password" class="grow" name="password" placeholder="Password" required autocomplete="off" />
      </label>
      <label class="input input-bordered input-sm p-0 flex items-center gap-2">
        <span >Password</span>
        <input type="password" class="grow" name="confirm_password" placeholder="Confirm Password" required autocomplete="off"  />
      </label>
      <button type="submit" class=" btn btn-sm rounded-sm btn-primary text-white">Register</button>
    </form>
    

    <div hidden class="tooltip-error-template bg-error text-white py-1 px-2 w-max absolute top-0 left-0">

    </div>
    <div class="flex items-center">
      <span class="text-sm">Already have an account?</span>
      <a href="/auth/login" class="btn btn-sm btn-link font-medium">Login</a>
    </div>
  </div>
</div>
<div id="tooltip-error-container">
</div>
<script src="/public/js/auth.js"></script>

<%- include('../../partials/footer') %>